body {
  background: #f1f1f1;
}

header {
  display: -webkit-box !important;
  display: -webkit-flex !important;
  display: -ms-flexbox !important;
  display: flex !important;
  background: #ff8b00;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 44px;
  box-shadow: 0 2px 3px #ddd;
}
header a {
  display: block;
  width: 50px;
  height: 44px;
}
header .back {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
header .back a {
  background: url(../../images/arr_left.png) no-repeat center;
}
header h1 {
  -webkit-box-flex: 6;
  -webkit-flex: 6;
      -ms-flex: 6;
          flex: 6;
  display: block;
  line-height: 44px;
  text-align: center;
  font-size: 1.4em;
  color: white;
  font-weight: 500;
  margin: 0;
}
header .appDown {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  position: relative;
}

.select_box {
  position: relative;
  margin-top: 3px;
  background: #fff;
}
.select_box .tabs {
  padding: 0;
  height: 38px;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.select_box .tabs li {
  line-height: 38px;
  text-align: center;
  font-size: .8em;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
      -ms-flex: 2;
          flex: 2;
}
.select_box .tabs li a {
  display: block;
}
.select_box .tabs li i {
  display: inline-block;
  width: 22px;
  height: 22px;
  vertical-align: middle;
  background: url("../../images/goods_down.svg") no-repeat center/20px 20px;
}
.select_box .tabs li:last-of-type {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  text-align: center;
}
.select_box .tabs li .sift {
  margin: 0 auto;
  display: block;
  width: 38px;
  height: 38px;
  background: url("../../images/sift.svg") no-repeat center/25px 25px;
}
.select_box .tab-content {
  position: absolute;
  left: 0px;
  top: 39px;
  width: 100%;
}
.select_box .tab-content > div {
  display: none;
}
.select_box .tab-content .show {
  display: block;
}
.select_box .tab-content .hiddn {
  display: none;
}
.select_box .tabs-sift {
  background: #f7f7f7;
  padding: 10px 0;
  border-bottom: 1px solid #dadada;
  padding-left: 10px;
}
.select_box .tabs-sift .sift-seach {
  width: 85%;
  position: relative;
  line-height: 35px;
  background: white;
  font-size: .8em;
  color: #ccc;
}
.select_box .tabs-sift .sift-seach input {
  width: 100%;
  height: 35px;
  padding: 0px 28px;
  box-shadow: 0 0 2px orange;
}
.select_box .tabs-sift .sift-seach i, .select_box .tabs-sift .sift-seach b {
  position: absolute;
  width: 20px;
  height: 20px;
  background-position: center;
  background-repeat: no-repeat;
}
.select_box .tabs-sift .sift-seach i {
  top: 8px;
  left: 6px;
  background: red;
}
.select_box .tabs-sift .sift-seach b {
  top: 8px;
  right: 6px;
  background: red;
}
.select_box .tabs-sift .seachBtn {
  width: 15%;
  height: 35px;
  text-align: center;
}
.select_box .tabs-sift .seachBtn input {
  line-height: 35px;
  font-size: .7em;
  background: transparent;
}

.goodsShow .showUl {
  padding: 6px;
}
.goodsShow .showUl li {
  width: 50%;
  float: left;
}
.goodsShow .showUl li a {
  border: 1px solid #eee;
  background: white;
  display: block;
  margin: 4px;
}
.goodsShow .showUl li a img {
  width: 100%;
  display: block;
}
.goodsShow .showUl li a .title {
  margin-top: 6px;
  padding: 0 5px;
  overflow: hidden;
  font-size: .6em;
  text-overflow: ellipsis;
}
.goodsShow .showUl li a .price {
  padding: 6px;
  font-size: .8em;
}
.goodsShow .showUl li a .price span {
  font-size: .4em;
}
