.header {
  height: 100%;
  height: 40px;
  position: relative;
  background-color: #ff841d;
  padding: 0 44px; }
  .header a {
    display: block;
    height: 100%; }
  .header .header_left {
    margin-top: 16px;
    content: "";
    width: 12px;
    height: 12px;
    border-bottom: 2px solid white;
    border-left: 2px solid white;
    display: block;
    position: absolute;
    left: 20px;
    -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
            transform: rotate(45deg); }
  .header h4 {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    color: white; }
  .header .header_right {
    width: 50px;
    height: 44px;
    background: url("../../images/header_app.png") no-repeat center center/cover;
    position: absolute;
    background-size: 30px 32px;
    top: 0;
    right: 0; }

.shopping_intro {
  padding: 15px 0 15px 100px;
  position: relative;
  border-bottom: 1px solid #000;
  height: 100%; }
  .shopping_intro dt {
    position: absolute;
    width: 100px;
    height: 100px;
    left: 0; }
    .shopping_intro dt img {
      width: 90%; }
  .shopping_intro dd {
    padding-left: 10px; }
    .shopping_intro dd a {
      color: #000;
      text-decoration: none; }
      .shopping_intro dd a .top {
        height: 57px; }
        .shopping_intro dd a .top span {
          color: #ff841d; }
      .shopping_intro dd a .button {
        height: 24px;
        color: #a1a1a1;
        font-size: 12px; }
        .shopping_intro dd a .button span {
          float: right; }
        .shopping_intro dd a .button b {
          display: inline-block;
          width: 16px;
          height: 12px;
          background: url("../../images/comment.png") no-repeat;
          background-size: 16px 12px;
          vertical-align: middle;
          opacity: .4; }

.contain_main a {
  color: black; }
.contain_main .contain_bottom {
  text-align: center;
  padding-bottom: 30px; }
