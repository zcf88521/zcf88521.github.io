//头部
body{
  background: #f1f1f1;
}
header {
    display: flex !important;
    background: #ff8b00;
    justify-content: space-between;
    align-items: center;
    height: 44px;
    box-shadow: 0 2px 3px #ddd;  
    a {
        display: block;
        width: 50px;
        height: 44px;
    }
    .back {
        flex: 1;
        a {
            background: url(../../images/arr_left.png) no-repeat center;
        }
    }
    h1 {
        flex: 6;
        display: block;
        line-height: 44px;
        text-align: center;
        font-size: 1.4em;
        color: white;
        font-weight: 500;
        margin: 0;
    }
    .appDown {
        flex: 1;
        position: relative;
        // a {
        //     background: url(../../images/header_app.png)no-repeat center/ 35px 35px;
        // }
    }
}

// 选择区域
.select_box{
  position: relative;
  margin-top: 3px;
  background: #fff;
  .tabs{
    padding: 0;
    height: 38px;
    display: flex;
    li{
      line-height: 38px;
      text-align: center;
      font-size: .8em;
      flex:2;
      a{
        
        display: block;
        
      }
      i{
        display:inline-block;
        width: 22px;
        height: 22px;
        vertical-align: middle;
        background:url("../../images/goods_down.svg") no-repeat center/20px 20px;
      }
      &:last-of-type{
        flex:1;
        text-align: center;
      }
      .sift{
        margin: 0 auto;
        display:block;
        width: 38px;
        height: 38px;
        background:url("../../images/sift.svg") no-repeat center/25px 25px;
      }
    }
  }
  .tab-content{
    position: absolute;
    left:0px;
    top:39px;
    width: 100%;
    &>div{
      display: none;
    }
    .show{
      display: block;
    }
    .hiddn{
      display: none;
    }
  }

  .tabs-sift{
    background: #f7f7f7;
    padding: 10px 0;
    border-bottom:1px solid #dadada;
    padding-left: 10px;
    .sift-seach{
      width: 85%;
      position: relative;
      line-height: 35px;
      background: white;
      font-size: .8em;
      color: #ccc;
      
      input{
        width: 100%;
         height: 35px;
        padding: 0px 28px;
        box-shadow: 0 0 2px orange;
      }
      i,b{
        position: absolute;
        width: 20px;
        height: 20px;
        background-position: center;
        background-repeat: no-repeat;
      }
      i{
        top:8px;
        left: 6px;
        background:red;
      }
      b{
        top:8px;
        right: 6px;
        background:red;
      }
    }
    .seachBtn{
      width: 15%;
      height:35px;
        text-align: center;
      
      input{
        line-height: 35px;
        font-size: .7em;
        background:transparent;
      }
    }
  }
}

// 商品展示区

.goodsShow{
  .showUl{
    padding: 6px;
    li{
      width: 50%;
      float: left;
      a{
        border:1px solid #eee;
        background:white;
        display: block;
        margin: 4px;
        img{
          width: 100%;
          display: block;
        }
        .title{
          margin-top:6px;
          padding: 0 5px;
          overflow: hidden;
          font-size: .6em;
          text-overflow: ellipsis;
        }
        .price{
          padding: 6px;
          font-size: .8em;
          span{
            font-size: .4em;
          }
        }
      }
    }
  }
}