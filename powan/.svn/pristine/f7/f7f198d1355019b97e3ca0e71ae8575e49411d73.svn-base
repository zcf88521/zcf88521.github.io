#header {
  height: 44px;
  background-color: #ff841d;
  width: 100%;
  width: 100%;
  position: relative;
  padding: 0 50px;
  text-align: center;
  line-height: 44px; }
  #header a {
    position: absolute;
    height: 100%;
    width: 50px;
    color: #fff;
    font-size: 16px; }
    #header a:nth-of-type(1) {
      left: 0;
      top: 0;
      background: url("../../images/arr_left.png") no-repeat center; }
    #header a:nth-of-type(2) {
      top: 0;
      right: 0;
      background: url("../../images/header_app.png") no-repeat center/32px; }
  #header h1 {
    font-size: 20px;
    font-weight: 900;
    color: #fff;
    line-height: 44px; }

#explain .container {
  margin: 0 auto;
  padding: 0;
  max-width: 960px; }
  #explain .container .content {
    padding: 4px 10px; }
    #explain .container .content .title {
      font-size: 18px;
      margin: 10px auto 5px auto;
      line-height: normal;
      font-weight: 900;
      color: #5a5a5a; }
    #explain .container .content .price {
      color: #ff6c00;
      font-size: 15px;
      display: block;
      font-weight: 600;
      line-height: normal; }
    #explain .container .content .info {
      color: #999999;
      margin: 12px 0px;
      font-size: 12px;
      line-height: 24px; }
      #explain .container .content .info span {
        margin: 0 4px;
        vertical-align: middle; }
        #explain .container .content .info span a {
          color: #4682c5;
          text-decoration: none; }
    #explain .container .content .text {
      color: #606060;
      padding-bottom: 20px; }
      #explain .container .content .text .media-body h4 {
        font-size: 16px;
        line-height: 24px;
        margin: 0; }
      #explain .container .content .text .media-right {
        padding: 12px 0 0 10px; }
        #explain .container .content .text .media-right a img {
          width: 120px;
          height: 120px;
          display: block;
          vertical-align: middle; }
    #explain .container .content .goBuy a {
      height: 40px;
      line-height: 40px;
      display: block;
      margin: 20px 10px;
      background-color: #FF9000;
      text-decoration: none;
      color: #fff;
      font-size: 14px;
      border-radius: 5px;
      text-align: center; }
  #explain .container .qrCode {
    margin: 20px 10px; }
    #explain .container .qrCode img {
      width: 100%;
      height: auto;
      vertical-align: middle;
      display: block; }

.comments {
  color: #000; }
  .comments .tit {
    font-size: 16px;
    padding: 6px 8px; }
  .comments .reply {
    padding: 6px 8px; }
    .comments .reply .form {
      border: 2px solid #eceae8; }
      .comments .reply .form textarea {
        padding: 4px 0 0 4px;
        height: 68px;
        line-height: 22px;
        font-size: 14px;
        color: #666;
        resize: none;
        border: none;
        outline: none;
        width: 100%; }
      .comments .reply .form .ctrl {
        height: 37px;
        background-color: #fbfbfb;
        border-top: 1px solid #f2f2f2; }
        .comments .reply .form .ctrl input {
          float: right;
          width: 100px;
          height: 100%;
          color: #fff;
          text-align: center;
          border-radius: 2px;
          background-color: #ff841d; }
      .comments .reply .form .tit {
        font-size: 16px;
        padding: 6px 8px; }

#directory {
  margin-top: 20px;
  height: 36px;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ccc;
  line-height: 36px;
  padding-left: 8px;
  padding-right: 163px;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;
  font-size: 14px;
  background: -webkit-linear-gradient(top, #ffffff, #ebebeb);
  background: linear-gradient(top, #ffffff, #ebebeb); }
  #directory a {
    color: #000;
    text-decoration: none; }

.footer {
  background-color: #efefef;
  margin-top: 25px; }
  .footer .footer-top {
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4; }
    .footer .footer-top a {
      border-right: 1px solid #c4c4c4;
      text-align: center;
      height: 34px;
      line-height: 34px;
      float: left;
      font-size: 14px;
      width: 30%;
      color: #000; }
      .footer .footer-top a img {
        width: 15px;
        height: 15px;
        vertical-align: middle;
        -webkit-transform: translate(-5px, -2px);
            -ms-transform: translate(-5px, -2px);
                transform: translate(-5px, -2px); }
  .footer .footer-bottom {
    padding: 15px 0; }
    .footer .footer-bottom p {
      text-align: center;
      font-size: 12px;
      color: #666; }
      .footer .footer-bottom p a:nth-child(1) {
        color: red; }
      .footer .footer-bottom p a:nth-child(2) {
        color: #000; }
