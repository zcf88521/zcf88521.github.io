@charset 'utf-8';
html,
body {
    width: 100%;
    min-width: 320px;
    background-color: #F7F7F7;
}

a {
    text-decoration: none;
}

a:focus {
    text-decoration: none;
}

// 头部样式=---------------------------------------
header {
    height: 51px;
    background-color: #ff841d;
    border-bottom: 1px solid #e6e6e6;
    a {
        display: block;
        height: 100%;
        img {
            overflow: hidden;
        }
    }
    .header_left {
        width: 75%;
        margin-left: 5px;
        padding: 12px;
        img {
            max-height: 25px;
        }
    }
    .header_right {
        padding: 7px;
        img {
            max-height: 34px;
        }
    }
    .header_hidden {
        background: #EFEFEF;
        border-bottom: 1px solid #ddd;
        height: 44px;
        position: fixed;
        display: none;
        .btn_serach {
            height: 44px;
            width: 44px;
            overflow: hidden;
            position: relative;
            color: transparent;
        }
    }
}

// 搜索栏-----------------------------------------------------------------
.goods_serach {
    border-bottom: 1px solid #e6e6e6;
    // height: 30px;
    padding: 10px;
    position: relative;
    background-color: White;
    input {
        font-size: 16px;
        height: 30px;
        line-height: 30px;
        border-radius: 15px;
    }
    .serachText {
        background: #f1f1f1;
        padding-left: 10px;
        width: 90%;
        padding-left: 5%;
        border: none;
    }
    .serachBtn {
        width: 63px;
        background: #ff841d;
        color: #FFFFFF;
        position: absolute;
        top: 10px;
        right: 10px;
    }
}

// 分类导航部分-------------------------------------------
.goods_nav {
    background-color: #fff;
    padding-top: 22px;
    padding-bottom: 6px;
    // height: 204px;
    overflow: hidden;
    .nav_item {
        // display: inline-block;
        float: left;
        width: 25%;
        margin-bottom: 16px;
        text-align: center;
        a {
            display: block;
            .nav_pic {
                img {
                    width: 50px;
                }
            }
        }
    }
    .nav_item:nth-of-type(n+9) {
        display: none;
    }
}

// 折扣推荐----------------------------------------------
.discount_push {
    background-color: #fff;
    .discount_title {
        height: 36px;
        margin-top: 4px;
        a {
            display: block;
            height: 35px;
            background-color: #ff9000;
            background: linear-gradient(top, #ffaf47, #ff9000);
            border-bottom: solid 1px #ffc881;
            line-height: 35px;
            overflow: hidden;
            color: #fff;
            padding-left: 10px;
            h4 {
                line-height: 35px;
                font-weight: bold;
                font-size: 18px;
            }
            img {
                height: 20px;
                width: 20px;
                margin-right: 10px;
                color: #FFF;
                margin-top: 8px;
            }
        }
    }
    .discount_con {
        ul {
            li {
                padding: 14px 8px;
                position: relative;
                a {
                    height: 100px;
                    display: block;
                    .con_left {
                        float: left;
                        width: 110px;
                        img {
                            width: 100px;
                            height: 100px;
                        }
                    }
                    .con_right {
                        padding-left: 90px;
                        line-height: 24px;
                        .con_title {
                            color: #333;
                            word-break: break-all;
                            font-size: 15px;
                            line-height: 19px;
                            min-height: 57px;
                            text-align: left;
                            font-weight: normal;
                            span {
                                color: #ff6c00;
                                display: inline;
                            }
                        }
                        .con_det {
                            // margin-top: 8px;
                            span {
                                color: #a1a1a1;
                                font-size: 12px;
                                i {
                                    background-image: url("../../images/2.svg");
                                    width: 14px;
                                    height: 15px;
                                    display: inline-block;
                                    background-size: auto 100%;
                                    background-repeat: no-repeat;
                                    background-position: center;
                                    vertical-align: middle;
                                    margin-right: 4px;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

// 更多优惠信息区域---------------------------------
.coupon_mess {
    width: 100%;
    text-align: center;
    height: 52px;
    border: 1px solid transparent;
    background: #F4F4F4;
    .coupon_link {
        display: block;
        line-height: 30px;
        background: #F4F4F4;
        text-decoration: none;
        font-size: 13px;
        background-image: linear-gradient(#ffffff, #f4f4f4);
        margin: 10px;
        border: 1px solid #dddddd;
        border-radius: 4px;
    }
}

.brand_rank {
    height: 36px;
    margin-top: 10px;
    margin-bottom: 4px;
    background: #F4F4F4;
    a {
        display: block;
        height: 35px;
        background-color: #ff9000;
        background: linear-gradient(top, #ffaf47, #ff9000);
        border-bottom: solid 1px #ffc881;
        line-height: 35px;
        overflow: hidden;
        color: #fff;
        padding-left: 10px;
        h4 {
            line-height: 35px;
            font-weight: bold;
            font-size: 18px;
        }
        img {
            height: 20px;
            width: 20px;
            margin-right: 10px;
            color: #FFF;
            margin-top: 8px;
        }
    }
}

// 底部---------------------------------------
footer {
    .footer_top {
        margin-top: 10px;
        background: #efefef;
        border-top: 1px solid #c4c4c4;
        border-bottom: 1px solid #c4c4c4;
        height: 34px;
        line-height: 34px;
        .footer_log {
            width: 30%;
        }
        .footer_back {
            width: 40%;
            border: 0;
        }
        a {
            display: block;
            height: 100%;
            text-align: center;
            box-sizing: border-box;
            float: left;
            font-size: 14px;
            border-right: 1px solid #c4c4c4;
            img {
                width: 15px;
                height: 15px;
                vertical-align: middle;
                margin-top: -5px;
                margin-right: 2px;
            }
        }
    }
    .footer_bottom {
        text-align: center;
        background: #efefef;
        font-size: 12px;
        padding: 15px 0;
        color: #666;
        p {
            a:first-child {
                color: red;
            }
        }
    }
}

// 悬浮app下载链接
.app_link {
    // transition: all 3s;
    position: fixed;
    bottom: 30px;
    right: 0;
    z-index: 76;
    img {
        width: 60px;
    }
    .app_close {
        display: block;
        position: absolute;
        bottom: 50px;
        right: 50px;
        width: 25px;
        height: 25px;
        color: #eee;
        background-color: #000;
        background: url('../../images/icon_bar.png')no-repeat -362px -32px;
    }
}
