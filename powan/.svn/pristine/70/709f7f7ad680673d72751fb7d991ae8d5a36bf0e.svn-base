html,
body {
    padding: 0;
    margin: 0;
}

body {
    min-width: 320px;
    background-color: #f5f9f3;
    transition: none;
}

// 头部
.kfc_hearder {
    background: #f4483e;
    color: #FFFFFF;
    height: 44px;
    width: 100%;
    position: relative;
    .kfc_back {
        position: absolute;
        width: 50px;
        height: 44px;
        text-align: center;
        left: 0;
    }
    h1 {
        display: block;
        margin: 0;
        text-align: center;
        line-height: 44px;
        font-size: 20px;
        font-weight: bold;
    }
    .kfc_right {
        position: absolute;
        width: 50px;
        height: 44px;
        line-height: 44px;
        right: 5px;
        top: 0px;
        img {
            width: 80%;
            height: 80%;
        }
    }
}

// 优惠通知
.kfc_info {
    font-size: 12px;
    text-align: center;
    color: #999;
    margin: 8px 0px;
}

// 内容
.kfc_contant {
    width: 100%;
    height: 100%;
    .media {
        border-bottom: 1px solid #f1f1f1;
        img {
            width: 100px;
            height: 80px;
        }
    }
    .name {
        font-size: 14px;
    }
    .kfc_time {
        font-size: 14px;
        color: #EE7700;
        margin-top: 10px;
    }
    li {
        margin-top: 10px;
    }
}
