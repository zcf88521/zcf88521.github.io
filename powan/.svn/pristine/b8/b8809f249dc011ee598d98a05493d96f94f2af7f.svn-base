@charset 'utf-8';
html,
body {
    width: 100%;
    min-width: 320px;
    // background-color: #F7F7F7;
}

header {
    height: 44px;
    padding: 0 8px;
    background-color: #ff841d;
    box-shadow: 0px 2px 3px #dddddd;
    position: relative;
    a {
        display: block;
        height: 44px;
        width: 44px;
        position: absolute;
        left: 0px;
        top: 0px;
        img {
            overflow: hidden;
        }
    }
    .header_left {
        text-align: center;
        position: absolute;
        left: 0px;
        top: 0px;
        line-height: 44px;
        color: #FFFFFF;
        width: 44px;
        height: 44px;
        padding: 12px;
        img {
            max-height: 25px;
        }
    }
    .header_right {
        text-align: center;
        h4 {
            font-size: 20px;
            line-height: 44px;
            color: #ffffff;
            font-weight: normal;
            padding: 0px 62px;
        }
    }
}

.history_con {
    p {
        font-size: 12px;
        margin: 0px;
        padding: 10px;
        color: #636363;
    }
    .input_link {
        padding: 0 10px;
        .text_box {
            word-break: break-all;
            color: #c9c9c9;
            width: 100%;
            box-sizing: border-box;
            padding: 6px 0px;
            font-size: 14px;
            line-height: 18px;
            outline: none;
            border-bottom: 1px solid #e3e3e3;
            border-radius: 0px;
            overflow-y: visible;
            resize: none;
        }
    }
}

.his_btn {
    text-align: center;
    input {
        font-size: 16px;
        text-align: center;
        border: 1px solid #cccccc;
        height: 40px;
        line-height: 38px;
        border-radius: 20px;
        padding: 0px 25px;
        margin-top: 30px;
        outline: none;
        color: #333333;
        background-color: #fff;
    }
}

.his_notice {
    margin-top: 40px;
    padding: 10px;
    h5 {
        margin-bottom: 10px;
        font-size: 14px;
        color: #333333;
    }
    p {
        padding: 0px;
        font-size: 12px;
        line-height: 24px;
        color: #999999;
    }
}
