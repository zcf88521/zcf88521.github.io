html,
body {
  width: 100%;
  min-width: 320px;
}

header {
  height: 44px;
  padding: 0 8px;
  background-color: #ff841d;
  box-shadow: 0px 2px 3px #dddddd;
  position: relative;
}
header a {
  display: block;
  height: 44px;
  width: 44px;
  position: absolute;
  left: 0px;
  top: 0px;
}
header a img {
  overflow: hidden;
}
header .header_left {
  text-align: center;
  position: absolute;
  left: 0px;
  top: 0px;
  line-height: 44px;
  color: #FFFFFF;
  width: 44px;
  height: 44px;
  padding: 12px;
}
header .header_left img {
  max-height: 25px;
}
header .header_right {
  text-align: center;
}
header .header_right h4 {
  font-size: 20px;
  line-height: 44px;
  color: #ffffff;
  font-weight: normal;
  padding: 0px 62px;
}

.history_con p {
  font-size: 12px;
  margin: 0px;
  padding: 10px;
  color: #636363;
}
.history_con .input_link {
  padding: 0 10px;
}
.history_con .input_link .text_box {
  word-break: break-all;
  color: #c9c9c9;
  width: 100%;
  box-sizing: border-box;
  padding: 6px 0px;
  font-size: 14px;
  line-height: 18px;
  outline: none;
  border-bottom: 1px solid #e3e3e3;
  border-radius: 0px;
  overflow-y: visible;
  resize: none;
}
