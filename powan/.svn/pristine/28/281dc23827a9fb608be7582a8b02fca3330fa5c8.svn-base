html,
body {
  width: 100%;
  min-width: 320px;
}

header {
  height: 51px;
  background-color: #ff841d;
  border-bottom: 1px solid #e6e6e6;
}
header a {
  display: block;
  height: 100%;
}
header a img {
  overflow: hidden;
}
header .header_left {
  width: 75%;
  margin-left: 5px;
  padding: 12px;
}
header .header_left img {
  max-height: 25px;
}
header .header_right {
  padding: 7px;
}
header .header_right img {
  max-height: 34px;
}
header .header_hidden {
  background: #EFEFEF;
  border-bottom: 1px solid #ddd;
  height: 44px;
  position: fixed;
  display: none;
}
header .header_hidden .btn_serach {
  height: 44px;
  width: 44px;
  overflow: hidden;
  position: relative;
  color: transparent;
}

.goods_serach {
  border-bottom: 1px solid #e6e6e6;
  padding: 10px;
  position: relative;
  background-color: White;
}
.goods_serach input {
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
}
.goods_serach .serachText {
  background: #f1f1f1;
  padding-left: 10px;
  width: 90%;
  padding-left: 5%;
  border: none;
}
.goods_serach .serachBtn {
  width: 63px;
  background: #ff841d;
  color: #FFFFFF;
  position: absolute;
  top: 10px;
  right: 10px;
}

.goods_nav {
  padding-top: 22px;
  padding-bottom: 6px;
  overflow: hidden;
}
.goods_nav .nav_item {
  float: left;
  width: 25%;
  margin-bottom: 16px;
  text-align: center;
}
.goods_nav .nav_item a {
  display: block;
}
.goods_nav .nav_item a .nav_pic img {
  width: 50px;
}
.goods_nav .nav_item:nth-of-type(n+9) {
  display: none;
}

.discount_push .discount_title {
  height: 36px;
  margin-top: 4px;
}
.discount_push .discount_title a {
  display: block;
  height: 35px;
  background-color: #ff9000;
  background: linear-gradient(top, #ffaf47, #ff9000);
  border-bottom: solid 1px #ffc881;
  line-height: 35px;
  overflow: hidden;
  color: #fff;
  padding-left: 10px;
}
.discount_push .discount_title a h4 {
  line-height: 35px;
  font-weight: bold;
  font-size: 18px;
}
.discount_push .discount_title a img {
  height: 20px;
  width: 20px;
  margin-right: 10px;
  color: #FFF;
  margin-top: 8px;
}
.discount_push .discount_con ul li {
  padding: 14px 8px;
  position: relative;
}
.discount_push .discount_con ul li a {
  height: 100px;
  display: block;
}
.discount_push .discount_con ul li a .con_left {
  float: left;
  width: 110px;
}
.discount_push .discount_con ul li a .con_left img {
  width: 100px;
  height: 100px;
}
.discount_push .discount_con ul li a .con_right {
  padding-left: 90px;
  line-height: 24px;
}
.discount_push .discount_con ul li a .con_right .con_title {
  color: #333;
  word-break: break-all;
  font-size: 15px;
  line-height: 19px;
  min-height: 57px;
  text-align: left;
  font-weight: normal;
}
.discount_push .discount_con ul li a .con_right .con_title span {
  color: #ff6c00;
  display: inline;
}
.discount_push .discount_con ul li a .con_right .con_det span {
  color: #a1a1a1;
  font-size: 12px;
}
.discount_push .discount_con ul li a .con_right .con_det span i {
  background-image: url("../../2.svg");
  width: 14px;
  height: 15px;
  display: inline-block;
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: center;
  vertical-align: middle;
  margin-right: 4px;
}

.coupon_mess {
  background-color: #eee;
  height: 40px;
  width: 96%;
  margin: 6px auto;
  text-align: center;
  border-radius: 5px;
}
.coupon_mess p {
  line-height: 40px;
  font-size: 16px;
  font-weight: 500;
}
