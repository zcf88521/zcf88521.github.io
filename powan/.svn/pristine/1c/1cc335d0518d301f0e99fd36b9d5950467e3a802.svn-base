// 头部样式=---------------------------------------
html,
body {
    width: 100%;
    min-width: 320px;
}

header {
    height: 51px;
    background-color: #ff841d;
    border-bottom: 1px solid #e6e6e6;
    a {
        display: block;
        height: 100%;
        img {
            overflow: hidden;
        }
    }
    .header_left {
        width: 75%;
        margin-left: 5px;
        padding: 12px;
        img {
            max-height: 25px;
        }
    }
    .header_right {
        padding: 7px;
        img {
            max-height: 34px;
        }
    }
    .header_hidden {
        background: #EFEFEF;
        border-bottom: 1px solid #ddd;
        height: 44px;
        position: fixed;
        display: none;
        .btn_serach {
            height: 44px;
            width: 44px;
            overflow: hidden;
            position: relative;
            color: transparent;
        }
    }
}

// 搜索栏-----------------------------------------------------------------
.goods_serach {
    border-bottom: 1px solid #e6e6e6;
    // height: 30px;
    padding: 10px;
    position: relative;
    background-color: White;
    input {
        font-size: 16px;
        height: 30px;
        line-height: 30px;
        border-radius: 15px;
    }
    .serachText {
        background: #f1f1f1;
        padding-left: 10px;
        width: 90%;
        padding-left: 5%;
        border: none;
    }
    .serachBtn {
        width: 63px;
        background: #ff841d;
        color: #FFFFFF;
        position: absolute;
        top: 10px;
        right: 10px;
    }
}

// 分类导航部分-------------------------------------------
.goods_nav {
    padding-top: 22px;
    padding-bottom: 6px;
    // height: 204px;
    overflow: hidden;
    .nav_item {
        // display: inline-block;
        float: left;
        width: 25%;
        margin-bottom: 16px;
        text-align: center;
        a {
            display: block;
            .nav_pic {
                img {
                    width: 50px;
                }
            }
        }
    }
    .nav_item:nth-of-type(n+9) {
        display: none;
    }
    // .nav_item:nth-of-type(9) {
    //     display: none;
    // }
    // .nav_item:nth-of-type(9) {
    //     display: none;
    // }
    // .nav_item:nth-of-type(9) {
    //     display: none;
    // }
}

// 折扣推荐----------------------------------------------
.discount_push {
    .discount_title {
        height: 36px;
        margin-top: 4px;
        a {
            display: block;
            height: 35px;
            background-color: #ff9000;
            background: linear-gradient(top, #ffaf47, #ff9000);
            border-bottom: solid 1px #ffc881;
            line-height: 35px;
            overflow: hidden;
            color: #fff;
            padding-left: 10px;
            h4 {
                line-height: 35px;
                font-weight: bold;
                font-size: 18px;
            }
            img {
                height: 20px;
                width: 20px;
                margin-right: 10px;
                color: #FFF;
                margin-top: 8px;
            }
        }
    }
    .discount_con {
        ul {
            li {
                padding: 14px 8px;
                position: relative;
                a {
                    height: 100px;
                    display: block;
                    .con_left {
                        float: left;
                        width: 110px;
                        img {
                            width: 100px;
                            height: 100px;
                        }
                    }
                    .con_right {
                        padding-left: 90px;
                        line-height: 24px;
                        .con_title {
                            color: #333;
                            word-break: break-all;
                            font-size: 15px;
                            line-height: 19px;
                            min-height: 57px;
                            text-align: left;
                            font-weight: normal;
                            span {
                                color: #ff6c00;
                                display: inline;
                            }
                        }
                        .con_det {
                            // margin-top: 8px;
                            span {
                                color: #a1a1a1;
                                font-size: 12px;
                                i {
                                    background-image: url("../../2.svg");
                                    width: 14px;
                                    height: 15px;
                                    display: inline-block;
                                    background-size: auto 100%;
                                    background-repeat: no-repeat;
                                    background-position: center;
                                    vertical-align: middle;
                                    margin-right: 4px;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

// 更多优惠信息区域---------------------------------
.coupon_mess {
    width: 96%;
    text-align: center;
    a {
        display: block;
        line-height: 30px;
        background: #F4F4F4;
        text-decoration: none;
        font-size: 13px;
        background-image: linear-gradient(#ffffff, #f4f4f4);
        margin: 10px;
        border: 1px solid #dddddd;
        border-radius: 4px;
    }
}
