.cu_content {
    margin: 0 auto;
    max-width: 960px;
    min-width: 320px;
    background: #FFFFFF;
    padding: 20px 10px;
    h3 {
        font-size: 18px;
        margin: 10px auto 5px auto;
        font-weight: 800;
        color: #5a5a5a;
        line-height: normal;
    }
    h4 {
        color: #ff6c00;
        font-weight: bold;
        font-size: 14px;
    }
    .info {
        margin: 12px auto;
        color: #999999;
        font-size: 12px;
        line-height: 24px;
        span {
            color: #999999;
            vertical-align: middle;
            display: inline-block;
            a {
                color: #4682c5;
            }
        }
    }
    .arti {
        padding-right: 120px;
        position: relative;
        .arti_left {
            width: 100%;
            font-size: 16px;
            float: left;
        }
        .arti_right {
            position: absolute;
            right: 0;
            top: 0;
            width: 120px;
            height: 120px;
            float: right;
            img {
                width: 100%;
            }
        }
    }
    .img {
        margin: 0 auto;
        width: 345px;
        height: 345px;
        img {
            width: 100%;
        }
    }
    .city {
        width: 20%;
        height: 651px;
        margin: 0 auto;
        min-width: 100px;
        display: hidden;
    }
    .area span {
        display: hidden;
    }
    #disstorck {
        text-align: center;
        a {
            font-size: 12px;
            font-weight: 100;
            display: block;
            padding: 0 10px;
            border-left: 1px solid #ccc;
            border-right: 1px solid #ccc;
            text-decoration: none;
            span {
                border-bottom: 1px solid #ccc;
                color: black;
                strong {
                    color: orange;
                }
            }
        }
    }
    .gogogo {
        margin: 0 auto;
        display: block;
        height: 40px;
        width: 100%;
        background-color: #ff6c00;
        text-align: center;
        line-height: 40px;
        text-decoration: none;
        color: white;
    }
    .line {
        width: 100%;
        height: 30px;
        border-bottom: 1px solid #ccc;
    }
    .tit {
        height: 30px;
        text-align: left;
        font-size: 16px;
    }
    .reply {
        width: 100%;
        height: 105px;
        border: 1px solid #ccc;
        textarea {
            height: 68px;
            width: 100%;
            resize: none;
            outline: none;
        }
        .ctrl {
            height: 37px;
            background-color: #fbfbfb;
            border-top: 1px solid #ccc;
            border-bottom: 2px solid #ccc;
            text-align: right;
            input {
                width: 100px;
                height: 36px;
                background-color: #ff6c00;
                text-align: center;
            }
        }
    }
    #newcomment,
    .tit {
        margin-top: 10px;
        height: 31px;
        font-size: 16px;
    }
    li {
        &.ui-border-b {
            padding-left: 40px;
            position: relative;
            padding-bottom: 15px;
            margin-top: 15px;
            border-bottom: 1px solid #ccc;
            img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                position: absolute;
                left: 0;
            }
            .con {
                padding-left: 10px;
                width: 100%;
                .name {
                    .username {
                        float: left;
                    }
                    .time {
                        float: right;
                    }
                }
                .content {
                    width: 100%;
                }
            }
        }
    }
}