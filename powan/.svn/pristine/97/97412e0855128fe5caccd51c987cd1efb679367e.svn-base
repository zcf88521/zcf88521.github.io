.cu_content {
    margin: 0 auto;
    max-width: 960px;
    background: #FFFFFF;
    padding: 20px 10px;
    h3 {
        font-size: 18px;
        margin: 10px auto 5px auto;
        font-weight: 800;
        color: #5a5a5a;
        line-height: normal;
    }
    h4 {
        color: #ff6c00;
        font-weight: bold;
        font-size: 14px;
    }
    .info {
        margin: 12px auto;
        color: #999999;
        font-size: 12px;
        line-height: 24px;
        span {
            color: #999999;
            vertical-align: middle;
            display: inline-block;
            a {
                color: #4682c5;
            }
        }
    }
    .arti {
        padding-right: 120px;
        position: relative;
        .arti_left {
            width: 100%;
            font-size: 16px;
            float: left;
        }
        .arti_right {
            position: absolute;
            right: 0;
            top: 0;
            width: 120px;
            height: 120px;
            float: right;
            img {
                width: 100%;
            }
        }
    }
    .img {
        margin: 0 auto;
        width: 345px;
        height: 345px;
        img {
            width: 100%;
        }
    }
    .gogogo {
        margin: 0 auto;
        display: block;
        height: 40px;
        width: 100%;
        background-color: #ff6c00;
        text-align: center;
        line-height: 40px;
        text-decoration: none;
        color: white;
    }
    .line {
        width: 100%;
        height: 30px;
        border-bottom: 1px solid #ccc;
    }
    .pinlun {
        height: 30px;
        text-align: left;
    }
    .box {
        width: 100%;
        height: 105px;
        border: 1px solid #ccc;
        .box_top {
            height: 68px;
            text-align: top;
            textarea {
                height: 68px;
                width: 100%;
                resize: none;
                outline: none;
            }
        }
        .box_bottom {
            height: 37px;
            background-color: #fbfbfb;
            border-top: 1px solid #ccc;
            border-bottom: 2px solid #ccc;
            text-align: right;
            input {
                width: 100px;
                height: 36px;
                background-color: #ff6c00;
                text-align: center;
            }
        }
    }
}