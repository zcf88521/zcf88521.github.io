// 比价搜索
.comparePrice {
    ul {
        width: 100%;
        border: 1px solid #cccccc;
        background-color: #ebebeb;
        border-radius: 8px;
        li {
            a {
                text-decoration: none;
                height: 40px;
                display: block;
                border-top: 1px solid #cccccc;
                padding-left: 16px;
                padding-right: 14px;
                cursor: point;
                color: black;
                display: flex;
                justify-content: space-between;
                span:nth-child(1) {
                    line-height: 40px;
                    font-weight: 900;
                }
                span:nth-child(2) {
                    font-size: 15px;
                    line-height: 40px;
                }
            }
            .border {
                border-top: none;
            }
        }
        div.container-fluid {
            background-color: #f9f9f9;
            .row {
                div {
                    border-bottom: 1px solid #cccccc;
                    border-right: 1px solid #cccccc;
                    height: 40px;
                    line-height: 40px;
                    a {
                        text-decoration: none;
                        display: block;
                        text-align: center;
                        border-top: none;
                    }
                }
                .no-bottom-border {
                    border-bottom: none;
                }
            }
        }
    }
}



//商品详情页面
.shopping {
    .shopping-top {
        .row {
            div {
                text-align: center;
                height: 44px;
                line-height: 44px;
                a {
                    text-decoration: none;
                }
            }
        }
    }
    .shopping-detail {
        .media {
            height: 144px;
            padding-left: 140px;
            position: relative;
            .media-left {
                position: absolute;
                top: 0;
                left: 0;
            }
        }
    }
}

// 底部
footer {
    height: 178px;
    background-color: #f2f2f2;
    #footer {
        .row {
            margin-top: 20px;
            div {
                display: inline-block;
                text-align: center;
            }
            .btn {
                width: 86px;
                height: 38px;
                background-color: #e8e8e8;
            }
            .white {
                background-color: white;
                border-radius: 0;
            }
        }
    }
    .foot-link {
        padding-left:12px; 
        h4 {
            margin-top: 28px;
        }
        h6 {
            margin-top: 13px;
        }
    }
}