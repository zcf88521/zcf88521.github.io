.cu_content {
  margin: 0 auto;
  max-width: 960px;
  background: #FFFFFF;
  padding: 20px 10px; }
  .cu_content h3 {
    font-size: 18px;
    margin: 10px auto 5px auto;
    font-weight: 800;
    color: #5a5a5a;
    line-height: normal; }
  .cu_content h4 {
    color: #ff6c00;
    font-weight: bold;
    font-size: 14px; }
  .cu_content .info {
    margin: 12px auto;
    color: #999999;
    font-size: 12px;
    line-height: 24px; }
    .cu_content .info span {
      color: #999999;
      vertical-align: middle;
      display: inline-block; }
      .cu_content .info span a {
        color: #4682c5; }
  .cu_content .arti {
    padding-right: 120px;
    position: relative; }
    .cu_content .arti .arti_left {
      width: 100%;
      font-size: 16px;
      float: left; }
    .cu_content .arti .arti_right {
      position: absolute;
      right: 0;
      top: 0;
      width: 120px;
      height: 120px;
      float: right; }
      .cu_content .arti .arti_right img {
        width: 100%; }
  .cu_content .img {
    margin: 0 auto;
    width: 345px;
    height: 345px; }
    .cu_content .img img {
      width: 100%; }
  .cu_content .gogogo {
    margin: 0 auto;
    display: block;
    height: 40px;
    width: 100%;
    background-color: #ff6c00;
    text-align: center;
    line-height: 40px;
    text-decoration: none;
    color: white; }
  .cu_content .line {
    width: 100%;
    height: 30px;
    border-bottom: 1px solid #ccc; }
  .cu_content .pinlun {
    height: 30px;
    text-align: left;
    font-size: 16px; }
  .cu_content .box {
    width: 100%;
    height: 105px;
    border: 1px solid #ccc; }
    .cu_content .box .box_top {
      height: 68px;
      text-align: top; }
      .cu_content .box .box_top textarea {
        height: 68px;
        width: 100%;
        resize: none;
        outline: none; }
    .cu_content .box .box_bottom {
      height: 37px;
      background-color: #fbfbfb;
      border-top: 1px solid #ccc;
      border-bottom: 2px solid #ccc;
      text-align: right; }
      .cu_content .box .box_bottom input {
        width: 100px;
        height: 36px;
        background-color: #ff6c00;
        text-align: center; }
  .cu_content .newPL {
    margin-top: 10px;
    height: 31px;
    font-size: 16px; }
  .cu_content .pinglun .ui-border-b {
    padding-left: 40px;
    position: relative; }
    .cu_content .pinglun .ui-border-b .userimg {
      width: 40px;
      height: 40px;
      position: absolute;
      left: 0; }
      .cu_content .pinglun .ui-border-b .userimg img {
        width: 100%; }
    .cu_content .pinglun .ui-border-b .con {
      padding-left: 10px;
      width: 100%; }
      .cu_content .pinglun .ui-border-b .con .name .username {
        float: left; }
      .cu_content .pinglun .ui-border-b .con .name .time {
        float: right; }
      .cu_content .pinglun .ui-border-b .con .content {
        width: 100%; }
